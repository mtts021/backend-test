{
    "openapi": "3.0.0",
    "info": {
      "title": "management investment- API",
      "description": "API for account management",
      "version": "0.1.0"
    },
    "servers": [
      {
        "url": "http://localhost:3000",
        "description": "Development server"
      }
    ],
    "paths": {
      "/owner": {
        "post": {
          "summary": "Create a new owner",
          "tags": ["Owner"],
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string",
                      "format": "email"
                    },
                    "password": {
                      "type": "string",
                      "minLength": 8
                    },
                    "passwordConfirmation": {
                      "type": "string",
                      "minLength": 8
                    }
                  },
                  "required": [
                    "name",
                    "email",
                    "password",
                    "passwordConfirmation"
                  ]
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Owner created successfully",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "uuid": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            },
            "400": {
              "$ref": "#/components/responses/BadRequest"
            },
            "422": {
                "description": "Unprocessable Entity",
                "content": {
                  "application/json": {
                    "schema": {
                      "type": "object",
                      "properties": {
                        "message": {
                          "type": "string"
                        }
                      }
                    },
                    "examples": {
                      "ownerExists":{
                           "$ref": "#/components/examples/ownerExists"
                      }
                    }
                  }
                }
            }
          }
        }
      },
      "/owner/login": {
        "post": {
          "summary": "Create a new owner",
          "tags": ["Owner"],
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "email": {
                      "type": "string",
                      "format": "email"
                    },
                    "password": {
                      "type": "string",
                      "minLength": 8
                    }
                  },
                  "required": [
                    "email",
                    "password"
                  ]
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "login successfully",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "accessToken": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            },
            "400": {
              "$ref": "#/components/responses/BadRequest"
            },
            "422": {
                "description": "Unprocessable Entity",
                "content": {
                  "application/json": {
                    "schema": {
                      "type": "object",
                      "properties": {
                        "message": {
                          "type": "string"
                        }
                      }
                    },
                    "examples": {
                      "invalidEmailOrPassword":{
                           "$ref": "#/components/examples/invalidEmailOrPassword"
                      }
                    }
                  }
                }
            }
          }
        }
      }
    },
    "components": {
      "responses": {
        "BadRequest": {
          "description": "Bad request",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "error": {
                    "type": "object",
                    "properties": {
                        "code": {"type": "string"},
                        "details": {"type": "array"}
                    }
                  }
                }
              },
              "examples": {
                "missingField": {
                  "value": {
                    "error":{
                        "details": {
                            "email": ["required"],
                            "password": ["required"]
                        }
                      }
                  }
                }
              }
            }
          }
        },
        "UnprocessableEntity": {
          "description": "Unprocessable Entity",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "message": {
                    "type": "string"
                  }
                }
              },
              "examples": {
                "ownerExists":{
                     "$ref": "#/components/examples/ownerExists"
                }
              }
            }
          }
        },
        "NotFound": {
          "description": "the resource could not be found",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "message": {
                    "type": "string"
                  }
                }
              },
              "examples": {
                "generalError": {
                  "value": {
                    "message": "string"
                  }
                },
                "NotFoundPasswordResetToken": {
                  "description": "password reset token could not be found",
                  "value": {
                    "message": "Password reset token not found"
                  }
                }
              }
            }
          }
        }
      },
      "examples": {
        "generalError": {
          "value": {
            "message": "string"
          }
        },
        "ownerExists": {
          "value": {
            "message": "Owner already exists"
          }
        },
        "passwordMismatch": {
          "value": {
            "message": "password mismatched confirmation"
          }
        },
        "invalidEmailOrPassword":{
          "value": {
            "message": "Invalid email or password"
          }
        }
      }
    }
  }
  